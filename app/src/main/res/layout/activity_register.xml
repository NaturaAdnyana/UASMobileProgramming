<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/add_profile"
            android:layout_marginVertical="40dp"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/add_photo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Nama Depan"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

        <EditText
            android:id="@+id/firstname_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/greySecondary"
            android:hint="First Name"
            android:background="@drawable/border_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Nama Belakang"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

        <EditText
            android:id="@+id/lastname_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/greySecondary"
            android:hint="Last Name"
            android:background="@drawable/border_primary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="NIM"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

        <EditText
            android:id="@+id/nim_edittext"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/greySecondary"
            android:hint="NIM"
            android:padding="15dp"
            android:background="@drawable/border_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Tanggal lahir"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

        <com.naturadoni.uasmobileprogramming.CustomDatePicker
            android:id="@+id/tgl_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/black"
            android:textColorHint="@color/greySecondary"
            android:hint="Tanggal Lahir"
            android:inputType="date"
            android:background="@drawable/border_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Jurusan"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

        <Spinner
            android:id="@+id/jurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

        <EditText
            android:id="@+id/email"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/greySecondary"
            android:hint="Masukkan Email"
            android:padding="15dp"
            android:background="@drawable/border_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Password"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

<!--        <EditText-->
<!--            android:id="@+id/password_edittext"-->
<!--            android:layout_marginTop="1dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:inputType="textPassword"-->
<!--            android:textColor="@color/black"-->
<!--            android:textColorHint="@color/greySecondary"-->
<!--            android:hint="Password"-->
<!--            android:padding="15dp"-->
<!--            android:background="@drawable/border_primary" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/white"
            app:boxBackgroundColor="@color/white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primary"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_primary"
                android:hint="Password"
                android:textColorHint="@color/greySecondary"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:padding="15dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Ulangi password"
            android:textSize="15sp"
            android:textColor="@color/primary"
            />

<!--        <EditText-->
<!--            android:id="@+id/retype_edittext"-->
<!--            android:layout_marginTop="1dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:inputType="textPassword"-->
<!--            android:textColor="@color/black"-->
<!--            android:textColorHint="@color/greySecondary"-->
<!--            android:hint="Ulangi Password"-->
<!--            android:padding="15dp"-->
<!--            android:background="@drawable/border_primary" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/white"
            app:boxBackgroundColor="@color/white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primary"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/retype_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_primary"
                android:hint="Ulangi Password"
                android:textColorHint="@color/greySecondary"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:padding="15dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginTop="64dp"
            android:text="Registrasi"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            />

    </LinearLayout>

</ScrollView>